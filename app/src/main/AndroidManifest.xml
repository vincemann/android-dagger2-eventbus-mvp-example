<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.gunhansancar.eventbusexample"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:name="com.github.vincemann.eventdemo.App"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.github.vincemann.eventdemo.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.github.vincemann.eventdemo.timer.domain.TimerService" />
    </application>

</manifest>